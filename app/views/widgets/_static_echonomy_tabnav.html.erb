    t.named I18n.t('static.echonomy.tabs.foundation')
    t.links_to :controller => 'static/echonomy', :action => 'foundation'
  end

  add_tab :html => { :class => 'ajax' } do |t|
    t.named I18n.t('static.echonomy.tabs.public_property')
