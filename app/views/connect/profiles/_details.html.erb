<%# Renders the profile details for the given profile. Will only be used in the non-ajax case.
%>

<% @profile = profile if defined?(profile) %>

<div id="profile_details_container" style="<%= 'display:none' if (defined?(hidden) and hidden) %>">
  <ul id="profile_details_tabs">
    <li id="full_name"><%=h @profile.full_name %></li>

    <li><a href="#overview"><%= I18n.t('connect.details.tabs.overview') %></a></li>
    <li><a href="#concernments"><%= I18n.t('connect.details.tabs.concernments') %></a></li>
    <li><a href="#web_profiles"><%= I18n.t('connect.details.tabs.web_profiles') %></a></li>

    <%= link_to I18n.t('application.general.close'), connect_path,
        :id => 'close_profile_details_container',
        :class => 'close_link',
        :onclick => "$('.profile').removeClass('active');
                     $.scrollTo('top', 400, function(){
                       $('#profile_details_container').animate(toggleParams, 500);
                     });
                     return false;"
    %>

  </ul>

  <div id="avatar">
    <%= render :partial => 'connect/profiles/avatar' %>
  </div>

  <div id="actions">
    <%= render :partial => 'connect/profiles/actions' %>
  </div>

  <div id="overview" class="tab_content_container">
    <%= render :partial => 'connect/profiles/overview' %>
  </div>
  <div id="concernments" class="tab_content_container">
    <%= render :partial => 'connect/profiles/concernments' %>
  </div>
  <div id="web_profiles" class="tab_content_container">
    <%= render :partial => 'connect/profiles/web_profiles' %>
  </div>

</div>

<script type="text/javascript">
  $('#profile_details_container').tabs();
</script>
