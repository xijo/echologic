<div id="loginContainer">
  <% if current_user_session %>
    <%= link_to(image_tag(current_user.profile.avatar.url(:small), :id => 'logged_in_user_pic'), my_profile_path) %>
    <span id="logged_in_user">
      <%= I18n.t('users.user_sessions.login.hello', :name => current_user.profile.full_name) %><br/>
    </span>
  <% else %>
  <% cas_login_path = CASClient::Frameworks::Rails::Filter.config[:cas_base_url] + '/login' -%>
    <% form_for UserSession.new, :url => cas_login_path do |f| %>
      <span class="label"><%= I18n.t('users.user_sessions.login.email') %></span>
      <span class="label"><%= I18n.t('users.user_sessions.login.password') %></span><br/>
      <%= text_field_tag :username, '', :class => 'loginField' %>
      <%= password_field :password, '', :class => 'loginField' %>
      <%= hidden_field_tag :lt, cas_login_token %>
      <%= hidden_field_tag :service, request.url %>
      <%= f.submit 'Login', :class => 'loginButton' %><br/>
    <% end %>

    <%= link_to I18n.t('users.user_sessions.login.signup'), join_path, :class => 'ajaxLink bottomLabel' %>
    <%= link_to I18n.t('users.user_sessions.login.set_password'), new_password_reset_path, :class => 'ajaxLink bottomLabel' %><br/>
  <% end %>
</div>
